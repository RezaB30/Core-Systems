@model RadiusR_Manager.Models.RadiusViewModels.EditSetupServiceTaskViewModel

@{
    ViewBag.Title = RadiusR.Localization.Pages.Common.AssignWorkOrder + "-" + Model.ClientName;
}

<div class="centered-form-wrapper">
    <div class="centered-form">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ClientName)
            <table class="input-table">
                <tr>
                    <td>
                        @Html.LabelFor(model => model.TaskType)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.TaskType)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.ValidationMessageFor(model => model.TaskType)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.ActionLink(RadiusR.Localization.Pages.Common.Back, "Details", "Client", new { id = Request.QueryString["id"] }, new { @class= "link-button iconed-button back-button" })
                        <input type="submit" value="@RadiusR.Localization.Pages.Common.Accept" class="link-button iconed-button accept-button" />
                    </td>
                </tr>
            </table>
        }
    </div>
</div>