
@model RadiusR_Manager.Models.ViewModels.ChangeExpirationDateViewModel

@{
    ViewBag.Title = ViewBag.CustomerName + "-" + RadiusR.Localization.Model.RadiusR.ExpirationDate;
}

<div class="centered">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="centered-form">
            <div>
                @Html.LabelFor(model => model.NewDate)
                @Html.EditorFor(model => model.NewDate)
                @Html.ValidationMessageFor(model => model.NewDate)
            </div>
            <div style="margin: 0.5em 0;" class="centered">
                @Html.ActionLink(RadiusR.Localization.Pages.Common.Back, "Details", new { id = Request.RequestContext.RouteData.Values["id"] }, new { @class = "link-button iconed-button back-button" })
                &nbsp;
                <input type="submit" value="@RadiusR.Localization.Pages.Common.Save" class="link-button iconed-button save-button" />
            </div>
        </div>
    }
</div>
