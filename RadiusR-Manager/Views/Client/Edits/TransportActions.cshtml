@using RezaB.Web.Authentication

@{
    ViewBag.Title = ViewBag.CustomerName + "-" + RadiusR.Localization.Model.RadiusR.InstallationAddress;
}

<div class="centered">
    <div class="button-row">
        @Html.ActionLink(RadiusR.Localization.Pages.Common.ChangeAddress, "ChangeInstallationAddress", new { id = Request.RequestContext.RouteData.Values["id"] }, new { @class = "link-button iconed-button large-button location-button" })
    </div>
    @if (User.HasPermission("Transport Subscription"))
    {
        <div class="button-row">
            @Html.ActionLink(RadiusR.Localization.Pages.Common.Transport, "Transport", new { id = Request.RequestContext.RouteData.Values["id"] }, new { @class = "link-button iconed-button large-button next-button" })
        </div>
    }
    <div class="button-row">
        @Html.ActionLink(RadiusR.Localization.Pages.Common.Back, "Details", new { id = Request.RequestContext.RouteData.Values["id"] }, new { @class = "link-button iconed-button large-button back-button" })
    </div>
</div>