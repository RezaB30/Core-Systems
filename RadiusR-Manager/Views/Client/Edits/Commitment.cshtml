@using RezaB.Web.Helpers

@model RadiusR_Manager.Models.RadiusViewModels.SubscriptionCommitmentViewModel

@{
    ViewBag.Title = ViewBag.CustomerName + "-" + RadiusR.Localization.Model.RadiusR.Commitment;
}

<div class="centered-form-wrapper">
    <div class="centered-form">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <table class="input-table">
                <tr>
                    <td>
                        @Html.LabelFor(model => model.CommitmentLength)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.CommitmentLength)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.ValidationMessageFor(model => model.CommitmentLength)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.CommitmentExpirationDate)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.CommitmentExpirationDate)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.ValidationMessageFor(model => model.CommitmentExpirationDate)
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="centered">
                        @Html.ActionLink(RadiusR.Localization.Pages.Common.Back, "Details", new { id = Request.RequestContext.RouteData.Values["id"] }, new { @class = "link-button iconed-button back-button" })
                        @if (ViewBag.HasCommitment as bool? == true)
                        {
                            @Html.CheckButton("remove", RadiusR.Localization.Pages.Common.Remove)
                        }
                        <input type="submit" value="@RadiusR.Localization.Pages.Common.Accept" class="link-button iconed-button accept-button" />
                    </td>
                </tr>
            </table>
        }
    </div>
</div>