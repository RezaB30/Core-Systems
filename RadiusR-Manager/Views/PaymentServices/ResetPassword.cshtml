@model RadiusR_Manager.Models.RadiusViewModels.RadiusRBillingViewModel

@{
    ViewBag.Title = RadiusR.Localization.Pages.Common.PaymentServices + "-" + RadiusR.Localization.Pages.Common.ResetPassword;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="input-table">
        <tr>
            <td>
                @Html.LabelFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Password)
            </td>
            <td>
                @Html.EditorFor(model => model.Password, new { @htmlAttributes = new { @autocomplete = "off", @maxlength = 250 } })
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @Html.ValidationMessageFor(model => model.Password)
            </td>
        </tr>
        <tr>
            <td colspan="2" class="centered">
                @Html.ActionLink(RadiusR.Localization.Pages.Common.Back, "Edit", new { id = Model.ID }, new { @class = "link-button iconed-button back-button" })
                &nbsp;
                <input type="submit" value="@RadiusR.Localization.Pages.Common.Accept" class="link-button iconed-button accept-button" />
            </td>
        </tr>
    </table>
}