@model IEnumerable<RadiusR_Manager.Models.RadiusViewModels.TransitionOperatorViewModel>

@{
    ViewBag.Title = RadiusR.Localization.Pages.Common.TransitionOperators;
}

<table class="data-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RemoteFolders)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @foreach (var folder in item.RemoteFolders)
                {
                    <div>
                        @Html.DisplayFor(modelItem => folder)
                    </div>
                }
            </td>
            <td>
                @Html.ActionLink(RadiusR.Localization.Pages.Common.Edit, "Edit", new { id = item.ID }, new { @class = "link-button iconed-button edit-button" })
            </td>
        </tr>
    }
</table>
<div class="centered button-row">
    @Html.ActionLink(RadiusR.Localization.Pages.Common.Add, "Add", null, new { @class = "link-button iconed-button new-button" })
</div>