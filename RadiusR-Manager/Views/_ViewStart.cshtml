@{
    if (Request.IsAjaxRequest())
    {
        Layout = null;
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";

        if (!User.Identity.IsAuthenticated && Layout != null)
        {
            Layout = "~/Views/Shared/_NoAuthLayout.cshtml";
        }
        if (User.IsInRole("cashier") || User.IsInRole("technician"))
        {
            Layout = "~/Views/Shared/_NoMenuLayout.cshtml";
        }
    }
}