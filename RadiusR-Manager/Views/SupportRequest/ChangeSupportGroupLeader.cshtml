@using RezaB.Web.Helpers

@model RadiusR_Manager.Models.ViewModels.ChangeSupportGroupLeaderViewModel

@{
    ViewBag.Title = RadiusR.Localization.Pages.Common.SupportGroups + "-" + ViewBag.GroupName;
}

<div class="centered-form-wrapper">
    <div class="centered-form">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <table class="input-table">
                <tr>
                    <td>
                        @Html.LabelFor(model => model.LeaderID)
                    </td>
                    <td>
                        @Html.Select(model => model.LeaderID, (SelectList)ViewBag.ValidUsers, RadiusR.Localization.Pages.Common.Choose)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.ValidationMessageFor(model => model.LeaderID)
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="centered">
                        <a href="@ViewBag.RedirectUrl" class="link-button iconed-button back-button">@RadiusR.Localization.Pages.Common.Back</a>
                        <input type="submit" value="@RadiusR.Localization.Pages.Common.Accept" class="link-button iconed-button accept-button" />
                    </td>
                </tr>
            </table>
        }
    </div>
</div>

